{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "jsx": "react",
    "rootDir": ".",
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declarationDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [ "dom", "es2017" ],
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "jest.config.ts",
    "src/global.d.ts",
    "rollup.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
