{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declarationDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
